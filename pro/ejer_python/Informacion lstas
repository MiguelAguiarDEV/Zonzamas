
miLista = ["María","Pepe","Marta","Antonio","Antonio"]
print(miLista)


miLista.append("Messi")
print(miLista)



miLista.insert(1, "Cristiano")
print(miLista)

miLista.extend(["Xavi", "Luis Padrique", "Mourihnho"])
print(miLista)



posicion = miLista.index("Luis Padrique")
print(">posición de Luis Padrique: " + str(posicion))


if "Cristiano" in miLista:
    print("Cristiano está en la lista. SHiiIIII")
    
    
miLista.remove("Cristiano")
print(miLista)
del miLista[1]

print(miLista)

elementoEliminado = miLista.pop()

print("Elemento eliminado: " +  elementoEliminado)

print(miLista)

#miLista.clear()

print(miLista.count("Nacho"))

print(len(miLista))




miLista2 = ["Jose","Julian"]


miLista = miLista + miLista2
print(miLista)

miLista3 = ["Shakira","Beyoncé"] * 4

print(miLista3)


miLista.sort()

print("Lista ordenada ascendente")
print(miLista)

miLista.reverse()

print("Lista ordenada descendente")
print(miLista)

